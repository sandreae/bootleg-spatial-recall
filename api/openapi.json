                  "type": "string",
                  "example": "Success"
                },
                "results": {
                  "type": "integer",
                  "example": 1
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "impulses": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Impulse"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "UsersSuccessResponse": {
        "description": "success",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "Success"
                },
                "results": {
                  "type": "integer",
                  "example": 1
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "impulses": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                }
              }
            }
          }
        }
